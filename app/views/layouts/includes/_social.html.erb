<span class="social">
  <span class="social__caption">Compartilhar</span>
  <!-- facebook -->
  <div class = "social_icon">
    <a class="icon__btn icon__btn--tiny icon__btn--fb" target="_blank" href="https://www.facebook.com/share.php?u=<%= request.url %>&title=<%= @page_title %>">
      <i class="fab fa-facebook-f"></i>
    </a>
  </div>

  <!-- twitter -->
  <div class = "social_icon">
    <a class="icon__btn icon__btn--tiny icon__btn--tw" target="_blank" href="https://twitter.com/intent/tweet?status=<%= @page_title %> - <%= request.url %>">
      <i class="fab fa-twitter"></i>
    </a>
  </div>

  <!-- gmail -->
  <div class = "social_icon">
    <a class="icon__btn icon__btn--tiny" target="_blank" href="https://plus.google.com/share?url=<%= request.url %>">
      <i class="ion-social-googleplus-outline"></i>
    </a>
  </div>

  <!-- whatsapp -->
  <div class = "social_icon">
    <a class="icon__btn icon__btn--tiny icon__btn--wa" href="https://api.whatsapp.com/send?text=<%= @page_title %> - <%= request.url %>" data-action="share/whatsapp/share">
      <i class="fab fa-whatsapp"></i>
    </a>
  </div>
</span>
