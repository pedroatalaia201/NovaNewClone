<% if !videos.present? %>
    <h3 class = "video_empty">
        Ainda não temos nenhum vídeo cadastrado.
    </h3>
<% else %>
    <div class = "video_list">
        <% for video in videos %>
            <%= link_to(video_show_path(video, video.slug), class:"video_link") do %>
                <figure class = "video_figure">
                    <%= image_tag(video.get_thumb(), class: "video_small_thumb") %>
                </figure>

                <p class = "video_date_place">
                    <span class = "icon--left ion-calendar"></span>
                    <%= video.date_publish.strftime("%d/%m/%Y") %>
                </p>

                <h4 class = video_small_title>
                    <%= video.title %>
                </h4>
            <% end %>
        <% end %>
    </div>
<% end %>
